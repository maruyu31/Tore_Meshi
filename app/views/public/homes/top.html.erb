<div class="container">
  <h1>トップページ</h1>
  <div class="row">
    <%= form_with model: @contact, url: contacts_path, id: "new_contact", class: 'new_contact form-horizontal', local: true do |f| %>
      <div class="field form-group row">
        <ul>
          <li><%= f.label :"お問い合わせタイトル", class: "control-label" %></li>
          <li><%= f.text_field :title, placeholder: "ご意見・ご要望、不具合など" %></li>
        </ul>
      </div>

      <div class="field form-group row">
        <ul>
          <li><%= f.label :"お問い合わせ内容", class: "control-label" %></li>
          <li><%= f.text_area :body, placeholder: "お気づきの点をお知らせください" %></li>
        </ul>
      </div>

      <div class="actions row">
        <%= f.submit "送信", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

