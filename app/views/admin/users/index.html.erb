<div class="container-fluid">
  <h3 class="p-5">会員一覧</h3>
  <div class="row">
    <div class="col-md-9 mx-auto">
      <table class="table ml-5">
        <tbody>
          <tr class="bg-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>会員ステータス</th>
          </tr>

          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <% if user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
