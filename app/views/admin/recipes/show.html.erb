<div class="container">
  <div class="row">
    <div class="col-12 mx-auto text-center">
      <h2><%= @recipe.title %></h2>
      <h6><%= @recipe.introduction %></h6>
      <div>
        <%= attachment_image_tag @recipe, :image, :fill, 460, 400 %>
      </div>


      <div>
        <%= link_to "削除する", admin_recipe_path(@recipe), method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </div>
    </div>
  </div>
</div>
