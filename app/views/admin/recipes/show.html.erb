<div class="container">
  <div class="row">
    <div class="col-12 mx-auto text-center">
      <h2 class="m-3"><%= @recipe.title %></h2>
      <h6 class="m-3"><%= @recipe.introduction %></h6>
      <div class="m-5">
        <%= attachment_image_tag @recipe, :image, :fill, 460, 400 %>
      </div>
      <div>
        <%= link_to "削除する", admin_recipe_path(@recipe), method: :delete, class: "btn btn-danger mt-5", data: { confirm: "本当に削除しますか？" } %>
      </div>
    </div>
  </div>
</div>
